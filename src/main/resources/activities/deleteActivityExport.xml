<template name="deleteActivityExport" xmlns="http://ws.apache.org/ns/synapse">
    <parameter name="exportId" description="The id of the contact export."/>
    <sequence>
        <property name="uri.var.exportId" expression="$func:exportId"/>
        <property name="POST_TO_URI" value="true" scope="axis2" type="STRING"/>
        <header name="Content-Type" value="application/json" scope="transport"/>
        <call>
            <endpoint>
                <http method="DELETE"
                      uri-template="{uri.var.apiUrl}activities/exports/{uri.var.exportId}"/>
            </endpoint>
        </call>
    </sequence>
</template>